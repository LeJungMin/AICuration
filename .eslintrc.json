{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    // React 규칙  
    "react-hooks/exhaustive-deps": "warn",
    "react/display-name": "off",
    
    // 일반 코딩 규칙
    "prefer-const": "error",
    "no-var": "error",
    "no-console": "off",
    "no-debugger": "error",
    
    // Next.js 규칙
    "@next/next/no-img-element": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  }
}
